<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        app:cardCornerRadius="14dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/alertTitle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="TeriColor App"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/purple_500"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alert_message"
                    android:padding="10dp"
                    android:text="Thank you for using this app! There's not much of an instructions here other than selecting two colors and pressing confirm to reveal its combination! -\nHF! :)"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
                <View
                    android:id="@+id/alert_view"
                    android:layout_height="1dp"
                    android:layout_below="@+id/alert_message"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_below="@+id/alert_view"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/btnalert"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:text="ok"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>